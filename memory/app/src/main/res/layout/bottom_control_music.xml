<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_bottom_root"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_bottom_cover"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    android:background="@mipmap/main_bottom_cover"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_bottom_song"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginStart="6dp"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/main_bottom_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginStart="6dp"
                        android:ellipsize="end"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/main_bottom_menu"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/main_bottom_list" />

            <ImageView
                android:id="@+id/main_bottom_play"
                android:layout_width="41dp"
                android:layout_height="46dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/main_bottom_play" />

            <ImageView
                android:id="@+id/main_bottom_next"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/main_bottom_next" />
        </LinearLayout>

            <ProgressBar
                android:layout_marginTop="2dp"
                android:layout_gravity="bottom"
                android:id="@+id/main_bottom_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:maxHeight="3dp"
                android:progress="30"
                android:progressDrawable="@drawable/progressbar_color"
                android:tag="tint_accent_color" />
    </LinearLayout>