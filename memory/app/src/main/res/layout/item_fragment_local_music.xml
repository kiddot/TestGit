<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/item_iv_music"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@id/item_iv_music"
        android:layout_toStartOf="@+id/viewpager_list_button"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp"
        >

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_tv_artist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/viewpager_list_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:padding="15dp"
        android:src="@mipmap/item_head_more" />
</RelativeLayout>
